<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">

    <lifecycle>
        <phase-listener id="nocache">filters.NoCacheFilter</phase-listener>
    </lifecycle>

    <managed-bean>
        <managed-bean-name>registerController</managed-bean-name>
        <managed-bean-class>jsf.RegisterController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>albumController</managed-bean-name>
        <managed-bean-class>jsf.album.AlbumController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
    	<display-name>register</display-name>
    	<from-view-id>/register.jsp</from-view-id>
    	<navigation-case>
    		<from-outcome>REG_SUCCESS</from-outcome>
    		<to-view-id>/main.jsp</to-view-id>
    		<redirect />
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/main.jsp</from-view-id>
        <navigation-case>
            <from-outcome>login.success</from-outcome>
            <to-view-id>/user-pages/news.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user-pages/create-album.jsp</from-view-id>
        <navigation-case>
            <to-view-id>/user-pages/view-albums.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user-pages/view-albums.jsp</from-view-id>
        <navigation-case>
            <from-action>deleteAlbum</from-action>
            <from-outcome>DELETE-OK</from-outcome>
            <to-view-id>/user-pages/view-albums.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user-pages/view-album.jsp</from-view-id>
        <navigation-case>
            <from-outcome>DELETE_OK</from-outcome>
            <to-view-id>/user-pages/view-albums.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <managed-bean>
        <managed-bean-name>loginController</managed-bean-name>
        <managed-bean-class>jsf.LoginController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>userSessionController</managed-bean-name>
        <managed-bean-class>jsf.UserSessionController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>webUpload</managed-bean-name>
        <managed-bean-class>jsf.WebUploadController</managed-bean-class>
    
        <managed-bean-scope>request</managed-bean-scope></managed-bean>
    <managed-bean>
        <managed-bean-name>userProfileData</managed-bean-name>
        <managed-bean-class>jsf.UserProfileDataController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>viewAlbums</managed-bean-name>
        <managed-bean-class>jsf.album.ViewAlbumsController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>viewAlbum</managed-bean-name>
        <managed-bean-class>jsf.album.ViewAlbumController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>createAlbum</managed-bean-name>
        <managed-bean-class>jsf.album.CreateAlbumController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>newsController</managed-bean-name>
        <managed-bean-class>jsf.NewsController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>albumRequest</managed-bean-name>
        <managed-bean-class>jsf.album.ViewAlbumRequest</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>viewFriends</managed-bean-name>
        <managed-bean-class>jsf.friends.ViewFriendsController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>requestFriends</managed-bean-name>
        <managed-bean-class>jsf.friends.RequestFriendsController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
